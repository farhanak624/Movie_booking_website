<section class="container-fluid pt-3">
  <div class="card w-3">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol> 
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 rounded" src="https://news.tfw2005.com/wp-content/uploads/sites/10/2023/04/ROTB-Promotional-poster-01-1278x665.jpg"   alt="First slide" style="height: 550px; width:600px">
            <div class="carousel-caption d-none d-md-block">
                <h5>Tranformers Rise of The Beast</h5>
                <p>Unicorns coming to the earth to destroy their host planet earth</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 rounded" src="https://images7.alphacoders.com/131/1314905.jpeg"  alt="Second slide" style="height: 550px; width:600px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Oppenheimer</h5>
                <p>Nolan's Another experimental masterpiece releassing on IMAX</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 rounded" src="https://www.heavenofhorror.com/wp-content/uploads/2022/08/prey-2022-hulu-review-predator-prequel-1200x675.jpg"  alt="Third slide" style="height: 550px; width:600px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>PREY</h5>
                <p>Predator Hunting the hunter 4K </p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only"></span>
    </a>
</div>
  </div>
</section>
<section>
  <div class="container pt-5">
    <div class="row">
      <div class="container mb-3">
        <h1 class="row justify-content-center">New Releases</h1>
      </div>
      {{#each allMovies}}
      <div class=" col-lg-3 col-md-6 col-12 pt-4">
        <div class="card" style="height:100px">
          <div class="bg-image hover-zoom">
          <img src="/images/posters/{{this._id}}.jpg" style="height:400px;" class="card-img-top" alt="...">
          </div>
          <div class="card-body">
            <h5 class="card-title">{{this.movie}}</h5>
            <h6>{{this.genre}}</h6><h6>{{this.duration}}</h6>
            <p class="collapse mb-3 card-text">{{this.about}}</p>
            <a href="" class="btn btn-outline-success">Book my show</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>