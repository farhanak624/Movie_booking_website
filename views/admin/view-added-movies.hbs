<section class="mt-4">
    <div class="row justify-content-center">
        <h1>Added Movies</h1>
    </div>
    <div class="container pt-5 rounded">
        <table class="table table-striped table-dark" style="border-radius: 15px;">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Movie</th>
                    <th scope="col">Category</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Duration</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each addedMovies}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.movie}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.genre}}</td>
                    <td>{{this.duration}}</td>
                    <td>
                        <a class="btn btn-info" href="/adminEditMovie/{{this._id}}">Edit</a>
                        <a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete movie {{this.movie}}')" href="/admin-delete-movie/{{this._id}}">Delete</a>
                     </td>                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>